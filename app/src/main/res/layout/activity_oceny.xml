<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OcenyActivity">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="891dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/movie1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/listydom5"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/movie1_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/movie2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/filmmarvel" />

        <TextView
            android:id="@+id/movie2_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/movie3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/drstrange" />

        <TextView
            android:id="@+id/movie3_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/movie4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/venom" />

        <TextView
            android:id="@+id/movie4_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>